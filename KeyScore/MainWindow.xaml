<Window x:Class="KeyScore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeyScore" Height="300" Width="400">
    <Grid>
        <!-- Display the character to type -->
        <TextBlock Name="CurrentChar" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" />

        <!-- Input box for user to type in -->
        <TextBox Name="UserInput" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Width="100"
                 KeyDown="UserInput_KeyDown" MaxLength="1" />

        <!-- Timer display -->
        <Label Name="TimerLabel" Content="00:00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />

        <!-- High score display -->
        <TextBlock Name="HighScores" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" TextWrapping="Wrap" />

        <!-- Start button -->
        <Button Name="StartButton" Content="Start Game" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Click="StartButton_Click" Margin="10"/>
    </Grid>
</Window>
